@model List<Trip> 

@{
    List<string> imagePath = new List<string>();
}

<style>
    .center {
        margin: 0 auto;
        width: 80%;
    }

    .search-container {
        display: flex;
        margin-bottom: 20px;
        width:100%;
    }

    #searchInput{
        border-radius: 20px;
        border-color: black;
    }

    #searchForm {
        flex: 1; /*occupa tutto lo spazio*/
        display: flex;
    }
 
    button {
        padding: 8px 12px;
        border: none;
        border-radius: 20px;
        cursor: pointer;
        background-color: transparent;
    }

    button:hover {

    }   


    .carousel-fade {
        .carousel-inner

    {
        .item

    {
        transition-property: opacity;
    }

    .item,
    .active.left,
    .active.right {
        opacity: 0;
    }

    .active,
    .next.left,
    .prev.right {
        opacity: 1;
    }

        .next,
        .prev,
        .active.left,
        .active.right {
            left: 0;
            transform: translate3d(0, 0, 0);
        }

    }

    .carousel-control {
        z-index: 2;
    }

    }

    .carousel,
    .carousel-inner,
    .carousel-inner .item {
        height: 500px;
        border-radius: 20px;
    }

    .item:nth-child(1) {
        background: #74C390;
    }

    .item:nth-child(2) {
        background: #51BCE8;
    }

    .item:nth-child(3) {
        background: #E46653;
    }

    .carousel-item img {
        max-width: 100%;
        height: 500px;
        width: 500px;
    }

    .carousel-caption {
        background-color: rgba(0, 0, 0, 0.5); /* Imposta il colore di sfondo con una leggera trasparenza */
        padding: 10px; /* Aggiunge un padding per separare il testo dal bordo */
        border-radius: 20px;
    }

    .carousel-indicators {
        top:100%;
        position: absolute; /* Imposta la posizione assoluta rispetto al carousel */
    }


</style>

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Title</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <!-- Altri collegamenti CSS e intestazioni qui -->
</head>
<body>
    <div class="container">
        <div class="search-container">
            <form id="searchForm" asp-controller="Home" asp-action="RisultatiRicerca" method="get">
                <input type="text" id="searchInput" name="search" placeholder="Cerca..." class="form-control">
                <button type="submit"><img src="~/img/MagnifyingGlass.png" height="23px" width="23px" /></button>
            </form>
        </div>
    </div>

    <div id="carousel" class="carousel slide carousel-fade" data-ride="carousel">
        <h3>Prossime Uscite</h3>
        <ol class="carousel-indicators">
            <li data-target="#carousel" data-slide-to="0" class="active"></li>
            <li data-target="#carousel" data-slide-to="1"></li>
            <li data-target="#carousel" data-slide-to="2"></li>
        </ol>
        <!-- Carousel items -->
        <div class="carousel-inner">
            @foreach (var trip in Model)
            {
                var activeClass = trip == Model.First() ? "active" : "";
                <div class="carousel-item @activeClass">
                    <img src="@trip.image" class="d-block w-100 img-fluid" alt="...">
                    <div class="carousel-caption d-none d-md-block">
                        <h5>@trip.tripName ㅤ @trip.tripDate.ToString("dd/MM/yyyy")</h5>
                        <p>@trip.tripDescription</p>
                    </div>
                </div>
            }
        </div>

        <!-- Carousel nav -->
        <a class="carousel-control-prev" href="#carousel" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carousel" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>

    </div>
    <br />
    <br />
    <br />
    <br />

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js"></script>
    <!-- Altri script qui -->
    <script>
        $(document).ready(function () {
            $('.carousel').carousel();
        });
    </script>

</body>

